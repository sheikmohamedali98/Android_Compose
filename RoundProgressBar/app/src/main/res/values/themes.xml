<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.RoundProgressBar" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/skyblue</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:ignore="NewApi">800</item>
        <item name="postSplashScreenTheme">@style/Theme.RoundProgressBar</item>
    </style>
</resources>